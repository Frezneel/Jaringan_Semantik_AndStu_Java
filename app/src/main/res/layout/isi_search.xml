<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <ImageView
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:backgroundTint="@color/white">
                <TextView
                    android:id="@+id/tx_sub1"
                    android:layout_margin="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sub 1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/bg_shape"/>

                <TextView
                    android:id="@+id/tx_sub4"
                    android:layout_margin="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sub 4"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/bg_shape"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:backgroundTint="@color/white">
                <TextView
                    android:id="@+id/tx_hub1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="Hubungan 1"
                    android:textAlignment="textEnd"
                    android:visibility="visible"
                    tools:ignore="RtlCompat" />
                <ImageView
                    android:id="@+id/arah1"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="right"
                    android:src="@drawable/ic_baseline_north_west_24"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/arah4"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_north_east_24"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tx_hub4"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:text="Hubungan 4"
                    android:textAlignment="textStart"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:backgroundTint="@color/white">

                <TextView
                    android:id="@+id/tx_main"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/bg_shape"
                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:backgroundTint="@color/white">
                <TextView
                    android:id="@+id/tx_hub2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    android:text="Hubungan 2"
                    android:visibility="visible"
                    tools:ignore="RtlCompat" />
                <ImageView
                    android:id="@+id/arah2"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="right"
                    android:src="@drawable/ic_baseline_south_west_24"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/arah3"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_south_east_24"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tx_hub3"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Hubungan 3"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:backgroundTint="@color/white">
                <TextView
                    android:id="@+id/tx_sub2"
                    android:layout_margin="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sub 2"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/bg_shape"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tx_sub3"
                    android:layout_margin="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sub 3"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/bg_shape"
                    android:visibility="visible"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIST KATA KUNCI"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
        />

        <TextView
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Tanaman, Sayuran, Penyakit, \nBakteri, Virus, Jamur, Manusia."
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>